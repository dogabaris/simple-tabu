<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resultactivity"
    android:scaleType="centerCrop"
    android:orientation="vertical"
    android:id="@+id/backgroundBG">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/btn_kapat"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_dogru"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_yanlis"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/tv_dogru"
        android:layout_alignStart="@+id/tv_dogru" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_pas"
        android:layout_below="@+id/tv_yanlis"
        android:layout_alignLeft="@+id/tv_yanlis"
        android:layout_alignStart="@+id/tv_yanlis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="güzel mücadeleydi :)"
        android:id="@+id/textView"
        android:layout_marginBottom="52dp"
        android:layout_alignBottom="@+id/tv_dogru"
        android:layout_centerHorizontal="true" />

</RelativeLayout>